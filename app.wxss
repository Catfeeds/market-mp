/** 抽屉 **/
.offcanvas-scenes{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 101;
  opacity: 0.5;
  background: #000000;
}
.offcanvas-bar{ 
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    z-index: 102;
    min-width: 416rpx;
    max-width: 100%;
    background: #fff;
    display: none;
}
.offcanvas-scenes-low{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 91;
  opacity: 0.5;
  background: #000000;
}
.offcanvas-bar-low{ 
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    z-index: 92;
    min-width: 416rpx;
    max-width: 100%;
    background: #fff;
    display: none;
}



.offcanvas-bar-right {
    left: auto;
    right: 0;
    -webkit-transform: translateX(100%);
    transform: translateX(100%);
}
.offcanvas.active {
    display: block;
}
.offcanvas.active .offcanvas-bar.offcanvas-bar-show {
    -webkit-transform: translateX(0);
    transform: translateX(0);
}
.offcanvas-bar-center {
    width: 80%;
    height: 80%;
    top: 10%!important;
    left: 10%;
    -webkit-transform: translateX(10%);
    transform: translateX(10%);
}











.navigator-box {
  opacity: 0;
  position: relative;
  background-color: #FFFFFF;
  line-height: 1.41176471;
  font-size: 34rpx;

  transform: translateY(-50%);
  transition: .3s;
}
.navigator-box-show {
  opacity: 1;
  transform: translateY(0);
}
.navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 2rpx;
  border-top: 1px solid #D8D8D8;
  color: #D8D8D8;
}
.navigator:first-child:before {
  display: none;
}
.navigator-text {
  flex: 1;
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 45%;
  margin-top: -6rpx;
  /*right: 28rpx;*/
}



