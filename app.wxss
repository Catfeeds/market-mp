/** tab 标签 **/

.tab{
  background: #fff;
  position: relative;
  display:-webkit-box;
  -webkit-box-pack:justify;
}

.tab .item{
  text-align: center;
  padding:24rpx 0;
  min-width: 20%;
}
.tab .abled{
  text-align: center;
  padding:24rpx 0;
  min-width: 20%;
  color: #c0c4cc;
}
.tab .active{
  color: #890E25;
}
.tab .liner {
  background-color: #890E25;
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 50%;
  height: 6rpx;
  transition:left 0.3s;
}

.content{
  background: #fff;
  padding:30rpx;
}



/** buttom **/
button[type="primary"], button[loading][type="primary"], button[size="mini"]{
  background-color:#890E2D!important;
}

button[disabled][type="primary"], button[type="primary"][plain][disabled], button[disabled][size="mini"]{
  opacity:0.4;
}
button[type="primary"][plain], button[type="primary"][plain][size="mini"]{
  color:#fff;
  border:1px solid #890E2D;
}
button[type="default"]{
  background: #F8F8F8!important;
}
button[type="warn"] {
  color:#FFFFFF;
  background-color:#E64340;
}


