
/** category.wxss **/
page{
	background:#efeff4;
	overflow:hidden;
}

/** navbar 导航栏 **/
.navbar.search{
  opacity: 0.9;
  position: absolute;
  top: 0px;
  z-index: 100;
  background: #F0EFF5;
  height: 88rpx;
  border-bottom: 1px solid;
  border-color: rgba(0,0,0,0.10);
}

.search .but{
	line-height: 88rpx;
	padding:0 30rpx 0 0;
	color: #8F1A30;
	font-size: 32rpx;
	display: block;
}
.search .icon-search{
	position: absolute;
	left: 36rpx;
	top: 32rpx;
	color: red;
}
.search input{
	color: #8F1A30;
	padding-left:62rpx;
	background:#fff;
	border-radius: 12rpx;
	border:1px solid #E6E6EA;
	margin: 14rpx; 
	width: calc(100% - 262rpx);
	height:56rpx;
	min-height: 56rpx;
}

.search input::-webkit-input-placeholder {
	line-height: 60rpx;
	color: #888
}

.search-panel{  /*default */
	background:#fff;
	/*padding-top: 5px;*/
}	

.search-panel .title{
	padding:40rpx 0 20rpx 0;
	margin-left:30rpx;
	color:#666666;
	position: relative;
	border-bottom:1px solid;
	border-color: #eee;	
}


.list.justify .item{
	color:#666666;
	padding-left:46rpx;
}
.list.justify .item::before{
	border-top:1rpx solid #EEEEEE;
}


@media (max-width:320px){
  .tag{
    padding:10rpx 10rpx!important;
  }
}
