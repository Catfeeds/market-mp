

page{
  background:#fff;
  width: calc(100% - 20rpx);
  padding: 20rpx 10rpx;
  color: #333;
 font-size: 28rpx;
}

.center{
  text-align: center
}
.theme{
  font-size: 1.5em;
}
.title{
    display: block;
    font-size: 1.25em;
    margin-top: 2em;
    margin-bottom: .5em;
    font-weight: 400;
    text-indent: 0em!important;

}
.p{
    word-wrap: break-word;
    overflow: hidden;
    color: #333;
    display: block;
    -webkit-margin-start: 0px;
    -webkit-margin-end: 0px;
    text-indent: 1em;
}