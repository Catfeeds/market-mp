/* pages/message/messageDetail.wxss */

view {
    word-break: break-all;
    overflow: auto;
}

.container {
    padding: 0 24rpx;
    background-color: #fff;
}

.content-article-detail {
    /* border-bottom: 1px solid #eee; */
    margin-top: 40rpx;
    margin-bottom: 10px;
}

.entry-title {
    text-align: left;
    font-size: 32rpx;
    line-height: 1.6;
    font-weight: bold;
    outline: none;
    color: #3a4040;
    margin-bottom: 24rpx;
}

.entry-date {
    font-size: 22rpx;
    line-height: 1.6;
    color: #959595;
    font-weight: normal;
    outline: none;
    margin-bottom: 30rpx;
    border-bottom: 1px solid #eee;
    text-align: right;
}

.entry-date-text {
    margin-left: 10rpx;
}

.entry-icon-text {
    margin-left: 10rpx;
}

.entry-summary {
    font-size: 28rpx;
    line-height: 50rpx;
    letter-spacing: 1rpx;
    color: #666;
}

.entry-summary-p {
    margin-top: 30rpx;
}
.p-view {
    align-items:center;
}
.p-inline {
    display:inline;
    margin:0;
    padding:0;
}
.p-image{
    overflow: hidden;
    /* height: 650rpx; */
}
.entry-summary-p image {
    width: 100% !important;
}
