.common-list {
  margin-bottom: 24rpx;
  background: #fff;
}

.common-list .list-item {
  position: relative;
  border-bottom: 1rpx solid #efeff4;
  padding: 24rpx;
  min-height: 150rpx;
  overflow: hidden;
}

.common-list .list-item.has-img .content-img {
  position: absolute;
  left: 24rpx;
  top: 24rpx;
  width: 140rpx;
  height: 140rpx;
  /* border-radius:50%; */
  /* background-color: #ccc; */
}
.common-list .list-item.has-img .content-img image.cover {
  width: 140rpx;
  height: 140rpx;
  /* border-radius:50%; */
}
.common-list .list-item.has-img .content-img .tagNum{
  position:absolute;
  top: 2px;
  right:5px;
  height:35rpx;
  width:35rpx;
  color: #fff;
  background:#F12C20;
  border-radius:100rpx;
  line-height:35rpx;
  font-size:20rpx;
  text-align:center;
  display:inline-block;
}
