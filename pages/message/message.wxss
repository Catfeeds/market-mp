.common-list .list-item.has-img .content-title {
  margin-left: 200rpx;
  height: 70rpx;
  margin-bottom: 0rpx;
}

.common-list .list-item.has-img .content-title text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 32rpx;
  line-height: 1.4;
  font-weight: 400;
  color: #3a4040;
}

.common-list .list-item.has-img .content-text {
  margin-left: 200rpx;
}

.common-list .list-item.has-img .content-text image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.common-list .list-item .content-text text {
  color: #959595;
  margin-right: 32rpx;
  font-size: 26rpx;
  line-height: 1.2;
  font-weight: normal;
}