.order{
  margin-top:20rpx;
  background: #fff;
}
.order .hd{
  padding: 24rpx 30rpx;
  border-bottom: 1px solid #f1f1f1;
}
.order .bd{
  padding: 16rpx 30rpx;
  width:100%;
  white-space:nowrap;
}
.order .bd.space{
  white-space:normal; 
}
.order .bd .item{
  display:flex;
}
.order .bd .multiple{
  width:130rpx;
  margin-left: 16rpx;
  display:inline-block;
}
.order .bd .multiple .item-title{
  display: none;
}
.order .bd .item .item-img{
  width:130rpx;
  height:130rpx;
  position:relative;
  margin-right:20rpx;
}
.order .bd .item .item-title{
  font-size:28rpx;
  color:#000;
  width: calc(100% - 210rpx);
  word-break:break-all;
  line-height:40rpx;
}


.order .ft{
  padding: 16rpx;
  border-top: 1px solid #f1f1f1;
  line-height:50rpx;
}
.order .left{
  display: inline-flex;
}
.order .right{
  float: right;

}
.order .right button{
  height:50rpx;
  border-radius:50rpx;
  line-height:50rpx;
  margin-left: 20rpx;
}

.order .right button[type="primary"]::after {
  border: 0px;
  border-radius:50rpx;
}
.order .right button[type="default"]::after {
  border-radius:50rpx;
}
.order .right button[type="default"]{
  background:#fff;
  color: #353535;
}




.order .real{
  background-color:#ff3300;
  color:#fff;
}