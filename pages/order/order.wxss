/**my.wxss**/

page {
    background: #efeff4;
}

.fixed-box {
    position: fixed;
    width: 100%;
    z-index: 100;
    background: #fff;
}

.tab {
    background: #fafafa;
    height: 90rpx;
    border-bottom: 1px solid #e5e5e5;
}

.tab .liner {
    width: 20%;
}

.tags {
    font-size: 18rpx;
    letter-spacing: 0;
    color: #890e2d;
    margin-left: 20rpx;
    padding: 0rpx 8rpx;
    line-height: 28rpx;
    height: 28rpx;
    /*margin-top:2px;*/
    border: 1px solid #890e2d;
}

.tags.blue {
    border: 1px solid #00bfff;
    color: #00bfff;
    position: absolute;
    right: 22rpx;
    top: 22rpx;
    line-height: normal;
}

.tags.yellow {
    border: 1px solid #ffbf00;
    color: #ffbf00;
}

.tags.green {
    border: 1px solid #1aad19;
    color: #1aad19;
}

.order {
    margin-top: 20rpx;
    background: #fff;
}

.order .hd {
    padding: 24rpx 30rpx;
    border-bottom: 1px solid #f1f1f1;
}

.order .bd {
    padding: 16rpx 30rpx;
    width: 100%;
    white-space: nowrap;
}

.order .bd.space {
    white-space: normal;
}

.order .bd .item {
    display: flex;
}

.order .bd .multiple {
    width: 130rpx;
    margin-left: 16rpx;
    display: inline-block;
}

.order .bd .multiple .item-title {
    display: none;
}

.order .bd .item .item-img {
    width: 130rpx;
    height: 130rpx;
    position: relative;
    margin-right: 20rpx;
}

.order .bd .item .item-title {
    font-size: 28rpx;
    color: #000;
    width: calc(100% - 210rpx);
    word-break: break-all;
    line-height: 40rpx;
}

.order .ft {
    padding: 16rpx;
    border-top: 1px solid #f1f1f1;
    line-height: 50rpx;
}

.order .left {
    display: inline-flex;
}

.order .right {
    float: right;
}

.order .right button {
    height: 50rpx;
    border-radius: 50rpx;
    line-height: 50rpx;
    margin-left: 20rpx;
}

.order .right button[type="primary"]::after {
    border: 0px;
    border-radius: 50rpx;
}

.order .right button[type="default"]::after {
    border-radius: 50rpx;
}

.order .right button[type="default"] {
    background: #fff;
    color: #353535;
}

.order .real {
    background-color: #f30;
    color: #fff;
}
