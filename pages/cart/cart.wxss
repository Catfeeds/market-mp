/** 导航 **/
.navbar{
  background: #fff;
  color: #717171;
  border-bottom:1px solid #d8d8d8;
  height: 80rpx;
  position: fixed;
  top: 0px;
  z-index: 100;
}
.navbar .item{
  width: 180rpx;
}

.navbar .left{
  width: 70%;
  /*margin-left: 10px;*/
  text-align: left;
}

.item .checkbox{
  margin:36rpx 0 0 20rpx;
}

.cartnav .item.center{
  width:calc(100% - 150rpx - 220rpx);
}

.list{
  padding-top:80rpx;
  height:calc(100% - 184rpx)
}

.list-title {
  font-size: 26rpx;
  line-height: 1;
  padding: 4px 20rpx;
  border-top: 1rpx solid #D8D8D8;
}
.checkList-img{
  width: 45rpx;
  height: 45rpx;
  margin: 8rpx 10rpx 8rpx 0rpx;
  vertical-align: middle;
}
.xiaopi_tip{
  height:30rpx;
  width:100rpx;
  background-color:#890E25;
  line-height:30rpx;
  color:#fff;
  font-size:20rpx;
  text-align:center;
  border-radius:8px; 
  opacity:0.7;
  position:absolute;
  top:20rpx;
  left:104rpx;
  z-index: 1; 
}